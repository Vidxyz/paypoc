# Routes
# This file defines all application routes

GET     /health                          controllers.HealthController.health

POST    /auth/login                      controllers.AuthController.login
GET     /auth/callback                   controllers.AuthController.callback
POST    /auth/login/pkce                 controllers.AuthController.loginPkce
GET     /auth/callback/pkce              controllers.AuthController.callbackPkce
POST    /auth/refresh                    controllers.AuthController.refresh
POST    /auth/logout                     controllers.AuthController.logout
GET     /auth/user                       controllers.AuthController.getCurrentUser

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.at(path="/public", file)
